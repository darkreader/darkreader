{
    "manifest_version": 3,
    "action": {
        "default_title": "Dark Reader",
        "default_icon": {
            "38": "icons/dr_active_38.png",
            "19": "icons/dr_active_19.png"
        },
        "default_popup": "ui/popup/index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "alarms",
        "fontSettings",
        "scripting",
        "tabs",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}
