{
  "browser_specific_settings": {
    "gecko": {
      "id": "{036a55b4-5e72-4d05-a06c-cba2d2c21354}",
      "strict_min_version": "78.0"
    },
    "gecko_android": {}
  },
  "background": {
    "page": "background/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject/fallback.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["inject/index.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "world": "ISOLATED"
    }
  ],
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "optional_permissions": [    "theme",     "contextMenus"

]
}
